<% if @messages.nil? || @messages.length == 0%>
    <div style="width: 150px; height: auto; text-align: center; margin: 0 auto;">无聊天记录</div>
<% else %>
    <% count = 0 %>
    <% @messages.each do |msg| %>
        <% if msg.sender_id == @user.id %>
            <div style="width: auto; height: auto; margin:0 auto 10px auto; text-align:center; display: inline-block; float:right;" >:我<lable style="float:left; width:200px; height:auto; word-wrap: break-word;  text-align:left; background-color:#9BD1FA; margin:5px auto;" class="RoundedCorner">
              <b class="rtop"><b class="r1"></b><b class="r2"></b><b class="r3"></b><b class="r4"></b></b>
              <!--<br>-->
              <%= msg.content %>
              <!--<br><br>-->
              <b class="rbottom"><b class="r4"></b><b class="r3"></b><b class="r2"></b><b class="r1"></b></b>
            </lable></div>
        <% else %>
            <% if count = 0 %>
            <% @reciver = User.find msg.sender_id %>
            <% end %>
            <% count = 1 %>
            <div style="width: auto; height: auto; margin:0 auto 10px auto; text-align: left; display: inline-block; float:left;" ><%= @reciver.name %>(<%= User::TYPES_NAME[@reciver.types]%>):<lable style="float:right; width:200px; height:auto; word-wrap: break-word;  text-align:left; background-color:#9BD1FA; margin:5px 5px;" class="RoundedCorner">
              <b class="rtop"><b class="r1"></b><b class="r2"></b><b class="r3"></b><b class="r4"></b></b>
              <%= msg.content %>
              <b class="rbottom"><b class="r4"></b><b class="r3"></b><b class="r2"></b><b class="r1"></b></b>
            </lable></div>
        <% end %>
    <% end %>
<% end %>