<%= form_tag({:action => :uploadfile}, :multipart => true ,:remote => true ) do %>
  <div class="form_div">
    <%= file_field_tag 'file', :onchange => "handleUpload(this);file_validate(this);"%>
    <button id="btn_upload" type="submit"  onchange="file_validate(this)" >上 传</button>
  </div>
  <input type="hidden" name="course_id" value="<%= @user.id %>" />
<% end %>