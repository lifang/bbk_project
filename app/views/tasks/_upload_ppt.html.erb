<fieldset>
  <legend>上传PPT</legend>
  <%= form_tag({:action => :uploadfile}, :multipart => true ,:remote => true ) do %>
      <div class="form_div">
        <%= file_field_tag 'file', :onchange => "handleUpload(this);file_validate(this);"%>
        <button id="btn_upload" type="submit" class="green_btn" onchange="file_validate(this)" >上 传</button>
      </div>
      <input type="hidden" name="user_id" value="<%= @user.id %>" />
      <input type="hidden" name="task_id" value="<%= @task.id %>" />
      <input id="file_type" type="hidden" name="file_type" value="ppt" />
  <% end %>
</fieldset>