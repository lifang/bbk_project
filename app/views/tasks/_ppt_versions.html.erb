<% @ppt_files.each do |ppt| %>
<div class="ppt_list_item">
  <a href="<%= ppt.accessory_url %>" target="_blank" title="<%= ppt.name%>-点击链接下载"><%= ppt.name.size>40?"#{ppt.name[0,40]}...":ppt.name %></a>
  <div id="verify_bar" style="width: 100px; height: 100%; float: right; margin: 0 0 0 auto; z-index: 4;">
    <input type="button" value="聊 天" onclick="chat(this);" style="margin:0 auto">
  <% if ppt.id == @ppt_files.last.id && @user.types == User::TYPES[:CHECKER] && (@task.status == Task::STATUS[:WAIT_FIRST_CHECK] || @task.status == Task::STATUS[:WAIT_SECOND_CHECK]) %>
    <input type="button" value="审 核" onclick="verify(this, <%= @user.id %>,<%= @task.id %>);" style="margin:0 auto">
  <% end %>
  </div>
</div>
<% @messages = ppt.messages %>
<% @accessory = ppt %>
<div id="left_chat_panel_<%= ppt.id %>" class="chat_bar">
  <div id="chat_records_<%= ppt.id %>" class="left_chat_records">
    <%= render :partial => "left_chat_records"%>
  </div>
  <div id="chat_form_<%= ppt.id %>" class="left_chat_form">
    <%= render :partial => "left_chat_form"%>
  </div>
</div>
<% end %>