<div class="task_data_list">
<table>
  <thead>
  <th style="width: 30%;">任务名称</th>
  <th style="width: 10%;">任务状态</th>
  <th style="width: 20%;">领取时间</th>
  <th style="width: 20%;">最近更新</th>
  </thead>
  <tbody>
  <% @task_tag.tasks.each do |task| %>
      <tr>
        <td style="width: 30%;"><a href="/tasks/<%= task.id %>" target="_blank" title="点击查看任务详情" ><%= task.name
        %></a></td>
        <td style="width: 10%;"><%= Task::STATUS_NAME[task.status] %></td>
        <td  style="width: 20%;"><%= task.ppt_start_time.to_s[0,19] %></td>
        <td  style="width: 20%;"><%= task.updated_at.to_s[0,19] %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>